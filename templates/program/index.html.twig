{% extends 'base.html.twig' %}

{% block title %}Hello ProgramController!{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4  g-sm-2 g-md-4">
    {% for program in programs %}
        <div class="col">
            <div class="card h-100">
                <img src="{{program.poster}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h5>
                    <p class="card-text">{{ program.summary }}</p>
                    <a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-primary">Voir la fiche</a>
                </div>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </div>
{% endblock %}
